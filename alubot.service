[Unit]
Description=alubot
After=network-online.target

[Service]
Type=simple
WorkingDirectory=/home/ubuntu/AluBot/
ExecStart=/home/ubuntu/AluBot/.venv/bin/python3.12 src/main.py
User=ubuntu
Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target